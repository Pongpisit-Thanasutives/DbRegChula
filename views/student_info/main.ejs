  navBarLocation: 'student-info'
}) %>

<%- include('../common/header', {
  heading: 'Student Info',
  subheading: 'ข้อมูลของนักเรียน',
  breadcrumb: [
    'Student Info'
  ]
}) %>

<style>
div.relative {
    position: relative;
    left: 45px;
}
</style>

<style>
* {
    box-sizing: border-box;
}

/* Create two unequal columns that floats next to each other */
.column {
    float: left;
    padding: 10px;
    height: 500px; /* Should be removed. Only for demonstration */
}

.left {
  width: 17.5%;
}

.right {
  width: 82.5%;
}

/* Clear floats after the columns */
.row:after {
    content: "";
    display: table;
    clear: both;
}
</style>

<div class="container">
  <div class="row">

  <div class="column left" style="background-color:#aaa;">
    <img src="/static/img/oat.png" style=" height: 240px; width: 180px; margin-top: -3px">
    <div class="relative">
    <h3>รูปนิสิต</h3>
    </div>
  </div>

  <div class="column right" style="background-color:#bbb;">
  <p><b>ชื่อ</b> <%- name %></p>
  <p><b>นามสกุล</b> <%- lastname %></p>
  <p><b>เพศ</b> <%- sex %></p>
  <p><b>เลขประจำตัวประชาชน</b> <%- nationalid %></p>
  <p><b>รหัสประจำตัวนิสิต</b> <%- studentid %></p>
  <p><b>ระดับการศึกษา</b> ปริญญาตรี</p>
  <p><b>ชั้นปี</b> 3</p>
  <p><b>คณะ</b> <%- facultyname %></p>
  <p><b>ภาควิชา</b> <%- departmentname %></p>
  <p><b>กรุ๊ปเลือด</b> <%- bloodgroup %></p>
  <p><b>ที่อยู่</b> ถนน <%- road %> เขต <%- district %> แขวง <%- subdistrict %> จังหวัด <%- provice %> เลขไปรษณีย์ <%- postalcode %></p>
  <p><b>อีเมลล</b> <%- email %></p>
  </div>
  <div>
  <pre>
  <p><b>รายวิชาที่ท่านได้ลงทะเบียนและรอการยอมรับ</b></p>
  <%- allrequestsubjects %> 
  </pre>

  <pre>
  <p><b>รายวิชาที่ท่านได้ลงทะเบียนเรียน</b></p>
  <%- allstudysubjects %> 
  </pre>

  </div>
</div>
</div>

