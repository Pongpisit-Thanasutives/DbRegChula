<%- include('common/view_start', {
  title: 'Login',
  cssFiles: ['login'],
  includeNavBar: false
}) %>

<div class="container">
  <div class="row" id="pwd-container">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <h1 align="center" class="system-name">RegChula48</h1>
      <section class="login-form">
        <form method="post" action="/login" role="login">
          <h2 align="center">Please log in</h2>
          <% if (isInvalidUsernamePassword) { %>
          <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span>
            ชื่อผู้ใช้หรือรหัสผ่านไม่ถูกต้อง
            </div>
          <% } %>
          <% if (isTakenFromOtherPage) { %>
          <div class="alert alert-danger" role="alert" align="center">
            <span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span>
            Please log in first
            </div>
          <% } %>
          <div class="form-group">
            <label for="username">Username</label>
            <input type="text" class="form-control input-md" name="username" placeholder="Username">
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control input-md" name="password" placeholder="Password">
          </div>
          <button type="submit" class="btn btn-md btn-primary btn-block" style="height: 50px; margin-top: 30px">Enter</button>
        </form>
      </section>
    </div>
  </div>
</div>

<%- include('common/view_end', {
  includeFooter: false
}) %>
